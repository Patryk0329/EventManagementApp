<Window x:Class="EventManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:EventManagementApp"
        mc:Ignorable="d" 
        Title="Strona Główna" Height="450" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Button Content="Uczestnik" Width="200" Height="50" HorizontalAlignment="Center"  Margin="0,25,0,0"  Click="UczestnikButton_Click"/>
            <Button Content="Organizator" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" Click="OrganizatorButton_Click"/>
            <Button Content="Administrator" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top"  Margin="0,25,0,25"  Click="AdministratorButton_Click"/>
        </StackPanel>
    </Grid>
</Window>