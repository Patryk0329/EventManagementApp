<Window x:Class="EventManagementApp.EdytujLokalizacjaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytuj Lokalizację" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Nazwa" />
            <TextBox x:Name="NazwaTextBox" Height="25" />
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Adres" />
            <TextBox x:Name="AdresTextBox" Height="25" />
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Pojemność Maksymalna" />
            <TextBox x:Name="PojemnoscTextBox" Height="25" />
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Zapisz" Click="ZapiszButton_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Anuluj" Click="AnulujButton_Click" Width="100" />
        </StackPanel>
    </Grid>
</Window>
