<Window x:Class="EventManagementApp.RejestracjaOrganizatoraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rejestracja Organizatora" Height="350" Width="400"
        ResizeMode="NoResize" WindowState="Normal">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Nazwa Firmy" Margin="0,10,0,5" />
            <Grid Margin="10,0,0,10">
                <TextBox x:Name="NazwaFirmyTextBox" Height="25" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                <TextBlock x:Name="NazwaFirmyWatermark" Text="Wpisz nazwę firmy" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Foreground="Gray" IsHitTestVisible="False" />
            </Grid>

            <TextBlock Text="Kontakt" Margin="0,10,0,5" />
            <Grid Margin="10,0,0,10">
                <TextBox x:Name="KontaktTextBox" Height="25" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                <TextBlock x:Name="KontaktWatermark" Text="Wpisz kontakt (email)" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Foreground="Gray" IsHitTestVisible="False" />
            </Grid>

            <Button Content="Zarejestruj" Click="ZarejestrujButton_Click" Height="30" Margin="10" />
            <Button Content="Powrót" Height="20" x:Name="PowrotButton" Click="PowrotButton_Click" Margin="10,10,10,100" VerticalAlignment="Bottom" />
        </StackPanel>
    </Grid>
</Window>
