<Window x:Class="EventManagementApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Administratora" Height="400" Width="600"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Panel Administratora" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />

            <Button x:Name="KategorieButton" Content="Kategorie" Height="40" Click="KategorieButton_Click" Margin="10"/>
            <Button x:Name="LokalizacjeButton" Content="Lokalizacje" Height="40" Click="LokalizacjeButton_Click" Margin="10"/>
            <Button x:Name="AdministratorzyButton" Content="Administratorzy" Height="40" Click="AdministratorzyButton_Click" Margin="10"/>

            <Button x:Name="PowrotButton" Content="Powrót" Height="25" Click="PowrotButton_Click" Margin="10,20,10,10"/>
        </StackPanel>
    </Grid>
</Window>
